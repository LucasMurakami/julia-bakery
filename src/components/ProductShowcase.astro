---
import { cookies } from '../lib/products';
const bestsellers = cookies;
---

<section id="cookies" data-animate class="relative overflow-hidden bg-[hsl(var(--background))] px-6 py-16 md:px-10 md:py-24 lg:px-16">
	<!-- Background "BEST SELLERS" text -->
	<div class="pointer-events-none absolute inset-0 flex items-center justify-center overflow-hidden opacity-[0.08]">
		<p
			class="whitespace-nowrap text-[clamp(4rem,15vw,12rem)] font-bold uppercase leading-none text-[hsl(var(--primary))] -rotate-12 select-none"
			aria-hidden="true"
		>
			Mais Vendidos Mais Vendidos Mais Vendidos
		</p>
	</div>

	<div class="relative z-10 mx-auto max-w-6xl">
		<h2 class="sr-only">Mais vendidos</h2>
		<div class="flex flex-wrap items-end justify-center gap-8 md:gap-12 lg:gap-16">
			{bestsellers.map((item, i) => (
				<article class="flex flex-col items-center text-center" data-animate data-animate-delay={String((i % 3) + 1)}>
					<div
						class="relative flex h-56 w-56 flex-shrink-0 items-center justify-center overflow-hidden rounded-full border-4 border-[hsl(var(--primary))] bg-[hsl(var(--background))] md:h-64 md:w-64"
						aria-hidden="true"
					>
						<img
							src={item.image}
							alt=""
							class="h-full w-full object-cover"
							width="256"
							height="256"
							fetchpriority="low"
						/>
					</div>
					<p class="mt-4 text-sm font-semibold uppercase tracking-wider text-[hsl(var(--foreground))]">
						{item.name}
					</p>
				</article>
			))}
		</div>
	</div>
</section>
