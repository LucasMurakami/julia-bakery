---
import BakeryGalleryCarousel from './BakeryGalleryCarousel.tsx';
---

<section
	data-animate
	class="bakery-gallery relative overflow-hidden bg-[hsl(var(--background))] py-12 md:py-16"
	aria-label="Galeria da padaria"
>
	<div class="mb-8 px-6 text-center md:px-10 lg:px-16">
		<p class="text-xs font-semibold uppercase tracking-[0.18em] text-[hsl(var(--muted-foreground))]">
			Nossa casa
		</p>
		<h2 class="mt-2 text-2xl font-bold uppercase text-[hsl(var(--foreground))] md:text-3xl">
			Um pouco do nosso cantinho
		</h2>
	</div>

	<BakeryGalleryCarousel client:load />
</section>
