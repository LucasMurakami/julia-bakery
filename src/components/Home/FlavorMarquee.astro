---
const flavors = ['Chocolate', 'LÃ³tus', 'Matcha', 'Nozes', 'Baunilha'];
const extendedFlavors = [...flavors, ...flavors, ...flavors]; 
---

<section class="flavor-marquee overflow-hidden border-y border-[hsl(var(--border))] py-4">
    <div class="flavor-marquee-track">
        <div class="flavor-marquee-group">
            {extendedFlavors.map((f) => (
                <span>{f}</span>
            ))}
        </div>
        <div class="flavor-marquee-group" aria-hidden="true">
            {extendedFlavors.map((f) => (
                <span>{f}</span>
            ))}
        </div>
    </div>
</section>

<style>
    .flavor-marquee-track {
        display: flex;
        width: max-content;
        animation: flavor-marquee 60s linear infinite; 
        will-change: transform;
    }

    .flavor-marquee-group {
        display: flex;
        flex-shrink: 0;
        gap: 5rem;
        padding-right: 5rem;
		text-transform: uppercase;
        font-weight: 600;
        font-size: 0.75rem;
        letter-spacing: 0.2em;
        color: hsl(var(--muted-foreground));
    }

    @keyframes flavor-marquee {
        from { transform: translateX(0); }
        to { transform: translateX(-50%); }
    }
</style>