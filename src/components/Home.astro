---
import Nav from './ui/Nav';
import Hero from './Hero.astro';
import FlavorMarquee from './FlavorMarquee.astro';
import BakeryGallery from './BakeryGallery.astro';
import ProductShowcase from './ProductShowcase.astro';
import Story from './Story.astro';
import Testimonials from './Testimonials.astro';
import CTA from './CTA.astro';
import Footer from './Footer.astro';
---

<div class="min-h-screen bg-[hsl(var(--background))]">
	<Nav client:load />
	<Hero />
	<main>
		<Story />
		<FlavorMarquee />
		<BakeryGallery />
		<div class="mx-auto max-w-6xl px-6 md:px-10 lg:px-16">
			<ProductShowcase />
			<Testimonials />
			<CTA />
		</div>
	</main>
	<Footer />
</div>
